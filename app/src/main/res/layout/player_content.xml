<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_player_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginTop="300dp"
            android:src="@drawable/ll_player_whitebackground" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_minimize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_player_nav" />
            </LinearLayout>

            <com.sundroid.lystn.view.SFProBoldTV
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/ic_download"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_mp_download" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_nav_more_white" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginTop="32dp"
            android:src="@drawable/ll_shadow" />

        <com.sundroid.lystn.view.RobotoMediumTV
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The 2019 MTV VMAs"
            android:textColor="#000000"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:textSize="17sp" />

        <com.sundroid.lystn.view.RobotoRegularTV
            android:id="@+id/tv_small_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="2019 following | 9102 play"
            android:textColor="#40000000" />

        <LinearLayout
            android:id="@+id/ll_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.sundroid.lystn.view.RobotoRegularTV
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#BBBCCD"
                android:textSize="10sp" />

<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_weight="1"-->
<!--                android:gravity="center">-->

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:layout_weight="1"
                    android:progressTint="@color/colorAccent"
                    android:thumbTint="@color/md_white_1000" />

<!--            </LinearLayout>-->

            <com.sundroid.lystn.view.RobotoRegularTV
                android:id="@+id/tv_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#BBBCCD"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_seek_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_repeat_one" />

                <com.sundroid.lystn.view.RobotoRegularTV
                    android:id="@+id/tv_repeat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="10sp" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_previous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_backward" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_queue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_queue" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <com.sundroid.lystn.view.RobotoRegularTV
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Here is the audio descriptive text, where the creator can show the descriptive summary of the work.Here is the audio descriptive text, where the creator can show the descriptive summary of the work.Here is the audio descriptive text, where the creator can show the descriptive summary of the work."
                android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_podcast"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_podcast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_podcast_image"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_playlist_logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.sundroid.lystn.view.RobotoMediumTV
                            android:id="@+id/tv_podcast_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NPR"
                            android:textSize="17sp" />

                        <com.sundroid.lystn.view.RobotoRegularTV
                            android:id="@+id/tv_podcast_copy_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pop up culture and happy hour is a fun"
                            android:textSize="11sp" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_follow"
                android:layout_width="57dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center"
                android:background="@drawable/ic_ribbon_button"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />


        </FrameLayout>

    </LinearLayout>


</FrameLayout>
